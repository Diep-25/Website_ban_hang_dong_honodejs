<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">Đơn hàng</h1>
					<ol class="breadcrumb">
						<li><a href="/">Trang chủ</a></li>
						<li class="active">Đơn hàng</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="user-dashboard page-wrapper">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<ul class="list-inline dashboard-menu text-center">
                    <li><a href="/profile-details">Chi tiết hồ sơ</a></li>
					<li><a class="active" href="#">Đơn hàng</a></li>
					<li><a href="/address">Địa chỉ</a></li>
					<li><a href="/discount">Mã giảm giá</a></li>
				</ul>
				<div class="dashboard-wrapper user-dashboard">
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>Mã đơn hàng</th>
									<th>Khách hàng</th>
									<th>Địa chỉ</th>
									<th>Email</th>
									<th>số điện thoại</th>
									<th>Thời gian</th>
									<th>Tình trạng</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								{{#each oderDetail }}
								<tr>
									<td>#{{ this.code }}</td>
									<td>{{ this.address.dataValues.name }}</td>
									<td>{{ this.address.dataValues.address}}</td>
									<td>{{ this.user.dataValues.email}}</td>
									<td>{{ this.address.dataValues.phone}}</td>
									<td>{{convertDate this.createdAt}}</td>
									<td><span class="label {{ colorStartusOderDetail this.status }}">{{ this.status }}</span></td>
									<td><a href="" class="btn btn-default">View</a></td>
								</tr>
								 {{/each}}
								
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>