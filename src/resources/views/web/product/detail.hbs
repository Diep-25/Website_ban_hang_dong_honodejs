<section class="products related-products section">
	<div class="container">
		<div class="row">
			<div class="title text-center">
				<h2>Sản phẩm liên quan</h2>
			</div>
		</div>
		<div class="row">
            {{#each products}}
			<div class="col-md-3">
				<div class="product-item">
					<div class="product-thumb">
						<img class="img-responsive" src="{{ hostName }}/{{ this.images.0.dataValues.url  }}" alt="product-img" />
						<div class="preview-meta">
							<ul>
								<li>
									<span class="show-modal-js" id="{{ this.id }}" data-toggle="modal" data-target="#product-modal">
										<i class="tf-ion-ios-search"></i>
									</span>
								</li>
								<li>
									<a href="#!"><i class="tf-ion-android-cart"></i></a>
								</li>
							</ul>
                      	</div>
					</div>
					<div class="product-content">
						<h4><a href="/product/detail/{{ this.id }}">{{ this.name }}</a></h4>
						<p class="price">{{ convertPrice this.price }}</p>
					</div>
				</div>
			</div>
			{{/each  }}
		</div>
	</div>
</section>

