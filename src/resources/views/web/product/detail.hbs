
<section class="single-product">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<ol class="breadcrumb">
					<li><a href="/">Home</a></li>
					<li><a href="/product/all">Sản phẩm</a></li>
					<li class="active">{{ title }}</li>
				</ol>
			</div>
			
		</div>
		<div class="row mt-20">
			<div class="col-md-5">
				<div class="single-product-slider">
					<div id='carousel-custom' class='carousel slide' data-ride='carousel'>
						<div class='carousel-outer'>
							<!-- me art lab slider -->
							<div class='carousel-inner'>
								{{#each images }}
								<div class='item {{activeImage @key }}'>
									<img src='{{ hostName }}/{{ this.dataValues.url  }}' alt='' data-zoom-image="{{ hostName }}{{ this.dataValues.url  }}" />
								</div>
								{{/each }}
								
							</div>
							
							<!-- sag sol -->
							<a class='left carousel-control' href='#carousel-custom' data-slide='prev'>
								<i class="tf-ion-ios-arrow-left"></i>
							</a>
							<a class='right carousel-control' href='#carousel-custom' data-slide='next'>
								<i class="tf-ion-ios-arrow-right"></i>
							</a>
						</div>
						
						<!-- thumb -->
						<ol class='carousel-indicators mCustomScrollbar meartlab'>
							{{#each images }}
								<li data-target='#carousel-custom' data-slide-to='{{@key}}' class='{{activeImage @key }}'>
									<img src='{{ hostName }}/{{ this.dataValues.url  }}' alt='' />
								</li>
							{{/each }}
						</ol>
					</div>
				</div>
			</div>
			<div class="col-md-7">
				<form method="post" action="/product/add-cart/{{ product.id }}">
					<div class="single-product-details">
						<h2>{{ product.name }}</h2>
						<p class="product-price">{{convertPrice product.price }}</p>
						
						<p class="product-description mt-20">
							{{ product.detail }}
						</p>
						<div class="product-quantity">
							<span>Số lượng:</span>
							<div class="product-quantity-slider">
								<input id="product-quantity" type="text" value="1" min="1" name="quantity">
							</div>
						</div>
						<button type="submit" class="btn btn-main mt-20">Thêm vào giỏ hàng</button>
					</div>
				</form>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<div class="tabCommon mt-20">
