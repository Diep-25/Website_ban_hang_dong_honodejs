<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">{{ title }}</h1>
					<ol class="breadcrumb">
						<li><a href="/">Home</a></li>
						<li class="active">{{ title }}</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>


<section class="products section">
	<div class="container">
		<div class="row">
			<div style="display: flex; flex-wrap: wrap;">

			{{#each products}}
			<div class="col-md-3">
				<div class="product-item">
					<div class="product-thumb">
						{{#ifEquals this.status 1}}
						<span class="bage">Sale</span>
						{{/ifEquals }}
						{{#ifEquals this.status 2}}
						<span class="bage">Hot</span>
						{{/ifEquals }}
						<img class="img-responsive" src="{{ hostName }}/{{ this.images.0.dataValues.url  }}" alt="product-img" />
						<div class="preview-meta">
							<ul>
								<li>
									<span class="show-modal-js" id="{{ this.id }}" data-toggle="modal" data-target="#product-modal">
										<i class="tf-ion-ios-search-strong"></i>
									</span>
								</li>
								<li>
									<a href="/product/detail/{{ this.id }}"><i class="tf-ion-android-cart"></i></a>
								</li>
							</ul>
                      	</div>
					</div>
					<div class="product-content">
						<h4><a href="/product/detail/{{ this.id }}">{{ this.name }}</a></h4>
						<p class="price">{{convertPrice this.price }}</p>
					</div>
				</div>
			</div>
			{{/each }}
			</div>

		</div>
	</div>
</section>

