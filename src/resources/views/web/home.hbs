<section class="products section bg-gray">
	<div class="container">
		<div class="row">
			<div class="title text-center">
				<h2>Sản phẩm</h2>
			</div>
		</div>
		<div class="row">
			{{#each products}}
			<div class="col-md-4">
				<div class="product-item">
					<div class="product-thumb">
						{{#ifEquals this.status 1}}
						<span class="bage">Sale</span>
						{{/ifEquals }}
						{{#ifEquals this.status 2}}
						<span class="bage">Hot</span>
						{{/ifEquals }}
						<img class="img-responsive" src="{{ hostName }}/{{ this.image  }}" alt="product-img" />
						<div class="preview-meta">
							<ul>
								<li>
									<span class="show-modal-js" id="{{ this.id }}" data-toggle="modal" data-target="#product-modal">
										<i class="tf-ion-ios-search-strong"></i>
									</span>
								</li>
								<li>
									<a href="/product/detail/{{ this.id }}"><i class="tf-ion-android-cart"></i></a>
								</li>
							</ul>
                      	</div>
					</div>
					<div class="product-content">
						<h4><a href="">{{ this.name }}</a></h4>
						<p class="price">{{convertPrice this.price }}</p>
					</div>
				</div>
			</div>
			{{/each }}
		
		</div>
	</div>
</section>


