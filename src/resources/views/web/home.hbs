<div class="hero-slider">
	{{#each sliders}}
  <div class="slider-item th-fullpage hero-area" style="background-image: url({{ hostName }}/{{ this.image  }});">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 {{ this.attribute }}">	
          <p data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".1">{{ this.name }}</p>
          <h1 data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".5">
			{{#raw}}
				{{{ this.content  }}}
			{{/raw}}
			</h1>
          <a data-duration-in=".3" data-animation-in="fadeInUp" data-delay-in=".8" class="btn" href="{{ this.url }}">Mua ngay</a>
        </div>
      </div>
    </div>
  </div>
{{/each }}

</div>

