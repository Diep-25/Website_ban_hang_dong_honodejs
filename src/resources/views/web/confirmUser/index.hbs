<section class="signin-page account">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="block text-center">
          <h2 class="text-center">Xác thực tài khoản</h2>
          <form class="text-left clearfix" method="post" action="/check-confirm/{{ idUser }}">
            <div class="form-group">
              <input type="number" class="form-control" name="code" placeholder="Nhập mã xác thực..." required>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-main text-center">Xác thực</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>