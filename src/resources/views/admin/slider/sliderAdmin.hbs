
<main id="main" class="main">

  <div class="pagetitle">
    <h1>Danh sách slider</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách slider</li>
      </ol>
    </nav>
  </div>
  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <button type="button" class="btn btn-primary btn-custom-css"
              data-bs-toggle="modal"
              data-bs-target="#sliderModal">Thêm slider</button>
            <table class="table datatable">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Ảnh</th>
                  <th scope="col">Tiêu đề</th>
                  <th scope="col">Url</th>
                  <th scope="col">Vùng hiển thị</th>
                  <th scope="col">Chi tiết</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each sliders }}
                <tr>
                  <th scope="row">{{ this.id }}</th>
                  <td><a href="#"><img src="{{ hostName }}/{{ this.image  }}"
                        alt></a></td>
                  <td>{{ this.name }}</td>
                  <td>{{ this.url }}</td>
                  <td>{{ this.attribute }}</td>
                  <td>{{ this.content }}</td>
                  <td>
                    <a href="/admin/slider/update/{{ this.id }}"><button type="button" class="btn btn-primary"><i class="bi bi-pencil me-1"></i></button></a>
                    <a href="/admin/slider/delete/{{ this.id }}"><button type="button" class="btn btn-danger"><i class="bi bi-trash me-1"></i></button></a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
            <!-- End Table with stripped rows -->

          </div>
        </div>

      </div>
    </div>

    <div class="modal fade" id="sliderModal" tabindex="-1">
      <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Thêm slider</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"
              aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/admin/slider/create" method="post"
              enctype="multipart/form-data"
              class="row g-3 needs-validation" novalidate>
              <div class="col-md-12">
                <label for="validationCustom01" class="form-label">Tiêu đề</label>
                <input type="text" name="name" class="form-control"
                  id="validationCustom01" value required>
              </div>
              <div class="col-md-12">
                <label for="formFile" class="form-label">Ảnh</label>
                <input class="form-control" name="image" type="file"
                  id="formFile" required>
              </div>
              <div class="col-md-12">
                <label for="validationCustom02" class="form-label">Url</label>
                <input type="text" name="url" class="form-control"
                  id="validationCustom02" value required>
              </div>
              <div class="col-md-12">
                <label class="form-label">Vùng hiển thị</label>
                <select class="form-select" name="attribute">
                  <option selected value="1">Left</option>
                  <option value="2">Center</option>
                  <option value="3">Right</option>
                </select>
              </div>
              <div class="col-md-12">
                <label for="floatingTextarea" class="form-label">Chi tiết</label>
                <textarea class="form-control" name="content"
                  id="floatingTextarea" style="height: 100px;"
                  required></textarea>
              </div>
              <div class="col-12">
                <button class="btn btn-primary" type="submit">Thêm</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</main><!-- End #main -->