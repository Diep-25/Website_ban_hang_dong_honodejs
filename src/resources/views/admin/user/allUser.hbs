{{#if message}}
      <div
      class="alert alert-primary bg-primary text-light border-0 alert-dismissible fade show custom-alert"
      role="alert">
      {{ message }}
      <button type="button" class="btn-close btn-close-white"
        data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Danh sách người dùng</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách người dùng</li>
      </ol>
    </nav>
  </div>
  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <button type="button" class="btn btn-primary btn-custom-css"
              data-bs-toggle="modal"
              data-bs-target="#sliderModal">Thêm người dùng</button>
            <table class="table datatable">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Ảnh</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Role</th>
                  <th scope="col">Status</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each users }}
                <tr>
                  <th scope="row">{{ this.id }}</th>
                  <td><a href="#"><img src=""
                        alt></a></td>
                  <td>{{ this.lastname }} {{ this.firstname }}</td>
                  <td>{{ this.email }}</td>
                  <td>{{ this.role.dataValues.role }}</td>
                  <td>{{ this.status }}</td>
                  <td>
                    <a href="/admin/user/edit/{{ this.id }}"><button type="button" class="btn btn-primary"><i class="bi bi-pencil me-1"></i></button></a>
                    <a href="/admin/user/delete/{{ this.id }}"><button type="button" class="btn btn-danger"><i class="bi bi-trash me-1"></i></button></a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>

          </div>
        </div>

      </div>
    </div>

    <div class="modal fade" id="sliderModal" tabindex="-1">
      <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Thêm người dùng</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"
              aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/admin/user/create" method="post"
              enctype="multipart/form-data"
              class="row g-3 needs-validation" novalidate>
              <div class="col-md-12">
                <label for="validationCustom01" class="form-label">First Name<sup style="color: red;">*</sup></label>
                <input type="text" name="firstname" class="form-control"
                  id="validationCustom01" value="" required>
              </div>
              <div class="col-md-12">
                <label for="validationCustom01" class="form-label">Last Name<sup style="color: red;">*</sup></label>
                <input type="text" name="lastname" class="form-control"
                  id="validationCustom01" value="" required>
              </div>
              <div class="col-md-12">
                <label for="validationCustom01" class="form-label">Email<sup style="color: red;">*</sup></label>
                <input type="email" name="email" class="form-control"
                  id="validationCustom01" value="" required>
              </div>
              <div class="col-md-12">
                <label for="validationCustom02" class="form-label">Mật khẩu<sup style="color: red;">*</sup></label>
                <input type="password" name="password" class="form-control"
                  id="validationCustom02" value="" required>
              </div>
              <div class="col-md-12">
                <label class="form-label">Role<sup style="color: red;">*</sup></label>
                <select class="form-select" name="id_role">
                  <option value="1">Admin</option>
                  <option selected value="2">User</option>
                </select>
              </div>
              <div class="col-md-12">
                <label for="formFile" class="form-label">Ảnh</label>
                <input class="form-control" name="image" type="file"
                  id="formFile">
              </div>
              <div class="col-12">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="status" value="" checked id="invalidCheck2">
                    <label class="form-check-label" for="invalidCheck2">
                      Public
                    </label>
                  </div>
                </div>
              <div class="col-12">
                <button class="btn btn-primary" type="submit">Thêm</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</main>