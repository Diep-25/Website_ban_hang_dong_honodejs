<main id="main" class="main">

    <div class="pagetitle">
        <h1>Danh sách Product</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/admin/product/all">Product</a></li>
                <li class="breadcrumb-item active">{{ product.name }}</li>
            </ol>
        </nav>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <button type="button"
                            class="btn btn-primary btn-custom-css">Quay lại</button>
                        <form class="row g-3 needs-validation"
                            action="/admin/product/update/{{ product.id }}" method="post"
                            enctype="multipart/form-data" novalidate
                            style="margin-top: 40px;">
                            <div class="col-md-12">
                                <label for="validationCustom01"
                                    class="form-label">Tên<sup
                                        style="color: red;">*</sup></label>
                                <input type="text" name="name"
                                    value="{{ product.name }}"
                                    class="form-control" id="validationCustom01"
                                    required>
                                <div class="valid-feedback">
                                    Bạn chưa nhập tên sản phẩm!
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label for="validationCustom02"
                                    class="form-label">Giá<sup
                                        style="color: red;">*</sup></label>
                                <input type="number" name="price"
                                    class="form-control" id="validationCustom02"
                                    value="{{ product.price }}" required>
                                <div class="valid-feedback">
                                    Bạn chưa nhập giá sản phẩm!
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label for="validationCustom03"
                                    class="form-label">Số lượng<sup
                                        style="color: red;">*</sup></label>
                                <input type="number" name="quantity"
                                    class="form-control" id="validationCustom03"
                                    value="{{ product.quantity }}" required>
                                <div class="valid-feedback">
                                    Bạn chưa nhập số lượng sản phẩm!
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Tình trạng</label>
                                <select class="form-select" name="status">
                                    <option
                                        {{#ifEquals product.status 0}}
                                        selected
                                        {{/ifEquals}}
                                        value="0">Không</option>
                                    <option
                                        {{#ifEquals product.status 1}}
                                        selected
                                        {{/ifEquals}}
                                        value="1">Sale</option>
                                    <option
                                        {{#ifEquals product.status 2}}
                                        selected
                                        {{/ifEquals}}
                                        value="2">Hot</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <label for="formFile" class="form-label">Ảnh<sup
                                        style="color: red;">*</sup></label>
                                <input class="form-control" name="image"
                                    type="file" id="formFile">
                                <div class="valid-feedback">
                                    Bạn chưa nhập ảnh sản phẩm!
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label for="floatingTextarea" class="form-label">Chi
                                    tiết<sup style="color: red;">*</sup></label>
                                <textarea class="form-control" name="detail"
                                    id="floatingTextarea" style="height: 100px;"
                                    required>{{ product.detail }}</textarea>
                                <div class="valid-feedback">
                                    Bạn chưa nhập chi tiết sản phẩm!
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary" type="submit">Sửa</button>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </section>

</main><!-- End #main -->