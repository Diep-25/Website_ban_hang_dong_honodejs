 <main id="main" class="main">

  <div class="pagetitle">
    <h1>Danh sách sản phẩm</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách sản phẩm</li>
      </ol>
    </nav>
  </div>
  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <button type="button" class="btn btn-primary btn-custom-css"
              data-bs-toggle="modal" data-bs-target="#productModal">Thêm sản phẩm</button>
            <table class="table datatable">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Ảnh</th>
                  <th scope="col">Tên</th>
                  <th scope="col">Giá</th>
                  <th scope="col">Số lượng</th>
                  <th scope="col">Tình trạng</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each products }}
                <tr>
                  <th scope="row">{{ this.id }}</th>
                  <td><a href="#"><img src="{{ hostName }}/{{ this.image  }}"
                        alt></a></td>
                  <td>{{ this.name }}</td>
                  <td>{{#convertPrice this.price }}{{/convertPrice}}</td>
                  <td>{{ this.quantity }}</td>
                  <td>{{ this.status }}</td>
                  <td>
                    <a href="/admin/product/edit/{{ this.id }}"><button type="button" class="btn btn-primary"><i class="bi bi-pencil me-1"></i></button></a>
                    <a href="/admin/product/delete/{{ this.id }}"><button type="button" class="btn btn-danger"><i class="bi bi-trash me-1"></i></button></a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
            <!-- End Table with stripped rows -->

          </div>
        </div>

      </div>
    </div>

    <div class="modal fade" id="productModal" tabindex="-1">
      <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Thêm sản phẩm</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"
              aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form class="row g-3 needs-validation" action="/admin/product/create" method="post"
              enctype="multipart/form-data" novalidate>
              <div class="col-md-12">
                <label for="validationCustom01" class="form-label">Tên<sup style="color: red;">*</sup></label>
                <input type="text" name="name" class="form-control" id="validationCustom01"
                  value="" required>
                <div class="valid-feedback">
                  Bạn chưa nhập tên sản phẩm!
                </div>
              </div>
              <div class="col-md-12">
                <label for="validationCustom02" class="form-label">Giá<sup style="color: red;">*</sup></label>
                <input type="number" name="price" class="form-control" id="validationCustom02"
                  value="" required>
                <div class="valid-feedback">
                  Bạn chưa nhập giá sản phẩm!
                </div>
              </div>
              <div class="col-md-12">
                <label for="validationCustom03" class="form-label">Số lượng<sup style="color: red;">*</sup></label>
                <input type="number" name="quantity" class="form-control" id="validationCustom03"
                  value="" required>
                <div class="valid-feedback">
                  Bạn chưa nhập số lượng sản phẩm!
                </div>
              </div>
              <div class="col-md-12">
                <label class="form-label">Tình trạng</label>
                <select class="form-select" name="status">
                      <option selected value="0">Không</option>
                      <option value="1">Sale</option>
                      <option value="2">Hot</option>
                </select>
              </div>
              <div class="col-md-12">
                <label for="formFile" class="form-label">Ảnh<sup style="color: red;">*</sup></label>
                <div class="change-file-muti">
                  <input class="form-control" name="image" type="file" id="formFile" required multiple>
                  <div id="imagePreviewContainer"></div>
                  <button type="button" class="btn btn-danger btn-delete-all" id="deleteButton" style="display:none;">Xóa tất cả</button>
                </div>
                <div class="valid-feedback">
                  Bạn chưa nhập ảnh sản phẩm!
                </div>
              </div>
              <div class="col-md-12">
                <label for="floatingTextarea" class="form-label">Chi tiết<sup style="color: red;">*</sup></label>
                <textarea class="form-control" name="detail" id="floatingTextarea" style="height: 100px;" required></textarea>
                <div class="valid-feedback">
                  Bạn chưa nhập chi tiết sản phẩm!
                </div>
              </div>
              <div class="col-12">
                <button class="btn btn-primary" type="submit">Thêm</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

  </main>